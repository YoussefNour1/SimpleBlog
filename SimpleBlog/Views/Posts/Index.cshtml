@model SimpleBlog.ViewModels.PostsViewModel;

@{
    ViewData["Title"] = "All Blog Posts";
    if (Model.PageIndex > 1)
    {
        ViewData["Title"] = $"Blog Posts - Page {Model.PageIndex}";
    }

    int currentPage = Model.PageIndex;
    int totalPages = Model.TotalPages;
    int maxPagesToShowAroundCurrent = 2;
    int startPage = Math.Max(1, currentPage - maxPagesToShowAroundCurrent);
    int endPage = Math.Min(totalPages, currentPage + maxPagesToShowAroundCurrent);
    if (startPage == 1 && (endPage - startPage + 1) < (maxPagesToShowAroundCurrent * 2 + 1) && totalPages > (maxPagesToShowAroundCurrent * 2 + 1)) { endPage = Math.Min(totalPages, (maxPagesToShowAroundCurrent * 2 + 1)); }
    else if (endPage == totalPages && (endPage - startPage + 1) < (maxPagesToShowAroundCurrent * 2 + 1) && totalPages > (maxPagesToShowAroundCurrent * 2 + 1)) { startPage = Math.Max(1, totalPages - (maxPagesToShowAroundCurrent * 2)); }
}

<div class="container mt-4"> 
    <div class="text-center mb-4"> 
        <h1 class="display-4">All Blog Posts</h1> 
        <p class="lead">Welcome to our blog! Here you can find all the latest posts.</p>
    </div>

    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="mb-4 text-center">
            <a asp-action="Create" class="btn btn-lg btn-primary"> <i class="fas fa-plus-circle"></i> Create New Post</a> 
        </div>
    }

    @if (Model == null || !Model.Posts.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            No posts available yet. Check back soon!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var post in Model.Posts)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm"> 
                        <div class="card-body d-flex flex-column"> 
                            <h4 class="card-title">@post.Title</h4>
                            <small class="text-muted mb-2">
                                By: @post.Author on @post.PublicationDate.ToString("MMMM dd, yyyy")
                            </small>
                            @*<p class="card-text">@post. .....</p>*@
                            <div class="mt-auto">
                                <a asp-action="Details" asp-controller="Posts" asp-route-id="@post.Id" class="btn btn-outline-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.TotalPages > 1) 
    {
        <nav aria-label="Page navigation" class="mt-5 d-flex justify-content-center"> 
            <ul class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo; Previous</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">&laquo; Previous</a>
                    </li>
                }

                @if (startPage > 1)
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageNumber="1">1</a></li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    @if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageNumber="@totalPages">@totalPages</a></li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" aria-label="Next">
                            <span aria-hidden="true">Next &raquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next &raquo;</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>